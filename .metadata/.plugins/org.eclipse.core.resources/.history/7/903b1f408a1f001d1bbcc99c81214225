package edu.java.loop03;

public class LoopMain03 {

    public static void main(String[] args) {
        /* 아래와 같은 형식으로 구구단 2단을 출력하세요.
           2 x 1 = 2
           2 x 2 = 4
           2 x 3 = 6
           ...
           2 x 8 = 16
           2 x 9 = 18
         

        for(int i=1;i<10;i++) {
            int result = 2 * i; 
//            System.out.println("2 x " + i + " = " + result);
            System.out.printf("2 x %d = %d%n", i, (i*2));
        }  // Ctrl+/ : 현재 커서가 있는 라인을 주석 토글
        
        // System.out.printf(): 문자열을 포맷에 맞춰서 출력.
        // %d: 정수, %f: 실수, %s: 문자열
        // \n: new line(줄바꿈), \t: tab(탭)
        
        for(int i=1;i<10;i++) {
            for(int j=2;j<10;j++) {
                int result = j * i;
                System.out.print(j + "x" + i + " = " + result + " " + "\t");
            }
            System.out.print("\n");
        }
        */
        
        for(int i=1;i<101;i++) {
            System.out.print(i + "\t");
            }
            System.out.print("\n");
            
    }         
}
