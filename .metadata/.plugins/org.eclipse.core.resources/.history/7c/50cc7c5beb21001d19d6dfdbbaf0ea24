        // 2단은 2x2까지, 3단은 3x3까지, 4단은 4x4까지, ..., 9단은 9x9까지 출력
        
        for(int dan=2;dan<=9;dan++) {
            for(int n=1;n<=9;n++) {
                if(dan==n) {
                    System.out.println(dan + " x " + n + " = " + (n * dan));
                    break;
                }
                else {
                    System.out.println(dan + " x " + n + " = " + (n * dan));
                }
            }
        
        }
        
        for(int dan=2;dan<=9;dan++) {
            for(int n=1;n<dan;n++) {
                System.out.println(dan + " x " + n + " = " + (n * dan));
                
                }
            
                }
            }
        
        }
        
    }
    
}
